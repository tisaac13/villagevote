# CivicSwipe Production Environment Variables
# Copy this file to .env.production and fill in your values
# NEVER commit the actual .env.production file to version control!

# =============================================================================
# REQUIRED - These must be set before deployment
# =============================================================================

# Database Configuration
POSTGRES_USER=civicswipe
POSTGRES_PASSWORD=<GENERATE_STRONG_PASSWORD>
POSTGRES_DB=civicswipe
DATABASE_URL=postgresql+asyncpg://civicswipe:<PASSWORD>@postgres:5432/civicswipe

# Redis Configuration
REDIS_PASSWORD=<GENERATE_STRONG_PASSWORD>
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@redis:6379/0
CELERY_RESULT_BACKEND=redis://:${REDIS_PASSWORD}@redis:6379/0

# Security - MUST generate new values for production!
SECRET_KEY=<GENERATE_WITH: openssl rand -hex 64>

# API Keys
CONGRESS_API_KEY=<YOUR_CONGRESS_GOV_API_KEY>
OPENSTATES_API_KEY=<YOUR_OPENSTATES_API_KEY>
ANTHROPIC_API_KEY=<YOUR_ANTHROPIC_API_KEY>

# =============================================================================
# OPTIONAL - Defaults are usually fine
# =============================================================================

# Environment
ENVIRONMENT=production

# CORS - Update with your actual domains
CORS_ORIGINS=["https://civicswipe.com","https://www.civicswipe.com","https://app.civicswipe.com"]

# JWT Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO

# =============================================================================
# MONITORING (Optional but recommended)
# =============================================================================

# Sentry for error tracking
SENTRY_DSN=<YOUR_SENTRY_DSN>

# DataDog for metrics (if using)
# DD_API_KEY=<YOUR_DATADOG_API_KEY>
# DD_SITE=datadoghq.com
